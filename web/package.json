{
  "name": "devhub-web",
  "version": "0.9.4",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "bugsnag-js": "^4.4.0",
    "firebase": "^4.11.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-native-web": "^0.5.3"
  },
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "extensible-react-scripts": "github:brunolemos/extensible-react-scripts",
    "gh-pages": "^1.1.0",
    "react-dev-utils": "^5.0.0",
    "serve": "^6.5.3"
  },
  "scripts": {
    "build": "NODE_ENV=production extensible-react-scripts build",
    "deploy": "gh-pages -d build",
    "eject": "extensible-react-scripts eject",
    "predeploy": "PUBLIC_URL=https://brunolemos.github.io/devhub/ npm run build",
    "serve": "serve build",
    "start": "extensible-react-scripts start",
    "test": "extensible-react-scripts test --env=jsdom"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(styl|sass|less|css)$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|styl|sass|less|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
