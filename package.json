{
  "name": "devhub",
  "version": "0.16.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "yarn workspace shared build && yarn workspace web build",
    "deploy": "yarn build && yarn now && yarn now alias",
    "dev": "yarn workspace shared build -w",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint",
    "now": "now",
    "prepare": "patch-package"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^1.1.4",
    "lint-staged-offline": "^0.0.1",
    "now": "^12.1.2",
    "patch-package": "^5.1.1",
    "postinstall-prepare": "^1.0.1",
    "prettier": "^1.15.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged-offline"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
