{
  "name": "devhub",
  "version": "0.10.0",
  "scripts": {
    "format": "prettier --write '{.,__tests__,src/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p .",
    "precommit": "lint-staged",
    "prepare": "patch-package",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "studio": "open -a /Applications/Android\\ Studio.app ./android/",
    "test": "jest",
    "web": "npm run web:start",
    "web:build": "pushd web; npm run build; popd;",
    "web:deploy": "pushd web; npm run deploy; popd;",
    "web:serve": "pushd web; npm run serve; popd;",
    "web:start": "pushd web; npm run start; popd;",
    "web:test": "pushd web; npm run test; popd;",
    "xcode": "open ios/devhub.xcworkspace"
  },
  "dependencies": {
    "gravatar": "^1.6.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "ramda": "^0.25.0",
    "react": "^16.3.0",
    "react-native": "0.54.4",
    "react-native-gesture-handler": "^1.0.0-alpha.41",
    "react-native-linear-gradient": "^2.4.0",
    "react-native-safari-view": "^2.1.0",
    "react-native-splash-screen": "^3.0.6",
    "react-native-vector-icons": "^4.4.3",
    "react-navigation": "^1.5.9",
    "react-navigation-header-buttons": "^0.0.5",
    "warna": "^0.2.4"
  },
  "devDependencies": {
    "@types/gravatar": "^1.4.28",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "@types/ramda": "^0.25.21",
    "@types/react": "^16.1.0",
    "@types/react-native": "^0.52.22",
    "@types/react-native-vector-icons": "^4.4.3",
    "@types/react-navigation": "^1.5.2",
    "@types/react-test-renderer": "^16.0.1",
    "babel-jest": "^22.4.3",
    "babel-preset-react-native": "4.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.1",
    "patch-package": "^5.1.1",
    "postinstall-prepare": "^1.0.1",
    "prettier": "^1.11.1",
    "react-native-typescript-transformer": "^1.2.3",
    "react-test-renderer": "^16.3.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "why-did-you-update": "^0.1.1"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.js"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(jsx?)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(tsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.history/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
