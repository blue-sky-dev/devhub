{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "jsx": "preserve",
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "../../@types",
      "../../node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "src/setupProxy.js"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../components"
    }
  ]
}
